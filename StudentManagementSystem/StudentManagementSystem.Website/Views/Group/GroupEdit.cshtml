@model GroupEditViewModel

@{
    ViewData["Title"] = "Edit Group";
}

<div class="col-sm-12 col-lg-12 col-md-12">
    <h1 class="display-4">Edit Group</h1>
</div>
<div class="col-sm-12 col-lg-12 col-md-12">
    <form asp-controller="Group" asp-action="GroupEdit" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input hidden asp-for="GroupId" />
        <input hidden asp-for="CourseId" />
        <input hidden asp-for="CourseName" />

        <div class="form-group">
            <label asp-for="GroupName" class="control-label">Group Name</label>
            <input asp-for="GroupName" class="form-control" style="width:auto" />
            <span asp-validation-for="GroupName" class="text-danger"></span>
        </div>

        <div class="form-group">
            <input type="submit" value="Update" class="btn btn-primary" />
            <a class="btn btn-info" asp-controller="Group" asp-action="GroupList" asp-route-courseId="@Model.CourseId" asp-route-courseName="@Model.CourseName">Back To List</a>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

